{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default configuration for repositories under `slavcodev/`",
  "extends": [
    ":dependencyDashboard",
    ":ignoreModulesAndTests",
    ":automergeMinor",
    ":automergeBranch",
    ":rebaseStalePrs",
    ":semanticCommitsDisabled",
    ":separateMajorReleases",
    ":combinePatchMinorReleases",
    ":enableVulnerabilityAlerts",
    ":timezone(UTC)",
    ":label(renovate)",
    "group:allNonMajor"
  ],
  "commitBodyTable": true,
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:daily"
    ]
  },
  "platformAutomerge": true,
  "prFooter": "[Read more](https://github.com/slavcodev/.github/blob/HEAD/renovate.md) about the use of [Renovate Bot](https://github.com/renovatebot/renovate) within `slavcodev/*` projects.",
  "rangeStrategy": "replace",
  "rollbackPrs": true,
  "packageRules": [
    {
      "rangeStrategy": "bump"
    },
    {
      "matchPackageNames": [
        "php"
      ],
      "extends": [
        ":automergeDisabled",
        ":automergePr"
      ],
      "ignoreUnstable": false,
      "groupName": "PHP"
    }
  ],
  "vulnerabilityAlerts": {
    "extends": [
      ":automergeDisabled",
      ":automergePr",
      ":labels(security)"
    ],
    "rangeStrategy": "bump"
  }
}